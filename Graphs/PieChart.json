{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Pie chart of melanoma cases for Males vs Females (2020-2023)",
  "title": {
    "text": ["Distribution of melanoma cases", "by gender"],
    "fontSize": 22    
  },
  "background": "#e0f7fa",
  "data": {
    "values": [
      {"gender": "Males", "percentage": 78.91},
      {"gender": "Females", "percentage": 21.09}
    ]
  },
  "layer": [
    {
      "mark": {
        "type": "arc",
        "outerRadius": 130 
      },
      "encoding": {
        "theta": {"field": "percentage", "type": "quantitative"},
        "color": {
          "field": "gender",
          "type": "nominal",
          "scale": {
            "range": ["#1f77b4", "#ff7f0e"]
          },
          "legend": null 
        },
        "tooltip": [
          {"field": "gender", "type": "nominal"},
          {"field": "percentage", "type": "quantitative"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "fontSize": 14,
        "fontWeight": "bold"
      },
      "encoding": {
        "text": {
          "field": "gender" 
        },
        "color": {
          "field": "gender", 
          "type": "nominal",
          "scale": {"range": ["#1f77b4", "#ff7f0e"]}
        },
        "radius": {"value": 165}, 
        "theta": {"field": "percentage", "type": "quantitative"}
      }
    }
  ],
  "config": {
    "background": "#e0f7fa"
  }
}
